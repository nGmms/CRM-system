@model CRMSystem.Models.Call

<h1>Delete Call</h1>
<h3>Are you sure you want to delete this call?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CallNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CallNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfCall)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfCall, "{0:dd/MM/yyyy}")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOfCall)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOfCall)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CallNo" />
        <input type="submit" value="Delete" />
        <a asp-action="Index">Cancel</a>
    </form>
</div>
